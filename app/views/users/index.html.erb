<!-- 部分テンプレートの指定 -->
<%= render 'books/userinfo',user: @user, book: @book_new %>

<div class="container">
  <div class="row">
  	<div class="col-xs-9">
  	<h2>Users</h2>
  	  <table class="table table-striped">
  	  	<thead>
  	  	  <tr>
  	  	  	<th>image</th>
  	  	  	<th>name</th>
            <th colspan="1"></th>
  	  	  </tr>
        </thead>
  	  	<tbody>
  	  	<% @users.each do |user| %>
  	  	  <tr>
  	  	  	<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
  	  	  	<td><%= user.name %></td>
  	  	  	<td><%= link_to "Show", user_path(user.id) %></td>
  	  	  </tr>
  	  	<% end %>
  	  </tbody>
  	 </table>
  	</div>
   </div>
  </div>