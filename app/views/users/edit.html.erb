
  <div class="container">
  	<div class="row">
  	 <div class="col-xs-3">
  	<h2>User info</h2>

<!-- エラーメッセージ -->
   <% if @user.errors.any? %>
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
   <br>
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
   <% end %>
<!-- ここまで -->

<!-- user edit -->
  	<%= form_for(@user) do |f| %>
  	<div class="form-group has-icon">
  		<div class="field">
  		<label class="user_name">Name</label>
  		<%= f.text_field :name, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Name" %>
  		<!-- text_fieldでnameカラムを変更できるようにしている -->
 		</div>

 	 	<div class="field">
 	 	  <label for="user_image">Image</label>
 	 	    <div class="form-group has-icon">
             <div class="user-edit-image">
           		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
           <!-- attachment_image_tagは、画像を埋め込むときに使います。これにより、ユーザのプロフィール画像が表示される -->
 	 		</div>
 	 	<label class="control-label sr-only" for="inputEmail">Image</label>
           <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
             <!-- attachment_fieldで、画像選択用のボタンが生成される -->
      </div>

 	   <div class="field">
 	 	<label class="user_introduction">Introduction</label>
  		  <%= f.text_field :introduction, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Introduction" %>
 	   </div>
 	<br>
 	<div class="actions">
 		<%= f.submit "Update User", class: "btn-default" %>
 	</div>
<% end %>
</div>
</div>
  </div>
</form>