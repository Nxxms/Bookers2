<!-- 部分テンプレートの指定 -->
<%= render 'books/userinfo',user: @user, book: @book %>

<div class="container">
 <div class="row">
   <div class="col-xs-9">
  	<h2>Books</h2>
  	  <table class="table table-striped">
  	  	<thead>
  	  	  <tr>
  	  	  	<th colspan="1"></th>
  	  	  	<th>Title</th>
  	  	  	<th>Opinion</th>
  	  	  </tr>
  	  	</thead>
  	  	<tbody>
  	  	<% @books.each do |post| %>
  	  	  <tr>
  	  	  	<td><%=link_to (attachment_image_tag post.user,:profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"), user_path(post.id) %></td>
  	  	  	<td><%= link_to post.title, book_path(post.id) %></td>
  	  	  	<td><%= post.body %></td>
  	  	  </tr>
  	  	<% end %>
  	  </tbody>
  	 </table>
  	</div>
  </div>
</div>