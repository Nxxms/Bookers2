<div class="container">
  <div class="row">
  	<div class="col-lg-4 col-lg-offset-4">
  	  <h2>Editing Book</h2>

  	  <% if @book.errors.any? %>
	<%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:
	<br>
		<% @book.errors.full_messages.each do |message| %> 
		<!-- エラー文は配列で保存されているためeachを使う -->
		<%= message %>
		<% end %>
     <% end %>

  	  <%= form_for(@book) do |f| %>

       	<h4>Title</h4>
       	<%= f.text_field :title, class: "col-xs-12" %>
       	<h4>Opinion</h4>
       	<%= f.text_area :body, class: "col-xs-12" %>
       	<br><br><br>
       	<%= f.submit 'Update Book', class: "col-xs-12 btn btn-primary" %>
     <% end %>

     <%= link_to 'Show', book_path %> | 
     <%= link_to 'Back', books_path %>
   </div>
  </div>
</div>
